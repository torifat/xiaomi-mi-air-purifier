{
  "displayName": "Xiaomi Mi Air Purifier",
  "name": "homebridge-xiaomi-mi-air-purifier",
  "version": "2.0.2",
  "description": "A short description about what your plugin does.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/torifat/xiaomi-mi-air-purifier"
  },

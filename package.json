  },
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/RifatNabi"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/**.ts --max-warnings=0",

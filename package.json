    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "homebridge": "^1.3.8",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "pinst": "^2.1.6",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
